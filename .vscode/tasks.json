{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build app",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pyinstaller --onefile --windowed make_labels.py"
        },
        {
            "label": "publish docs",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/mkdocs gh-deploy"
        },
        {
            "label": "test docs",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/xdoctest make_labels.py"
        }
    ]
}
